<!DOCTYPE html>
<html lang="{{lang}}">
<head>
<meta charset="utf-8">
<meta name="viewport" content="initial-scale=1, user-scalable=0">
<title>{{#if title}}{{title}} &mdash; {{/if}}{{config.site_name}}</title>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/octicons/2.2.0/octicons.css">
<link rel="stylesheet" href="/css/styles.css">
</head>

<body>

<header class="page-header">

    <div class="inner-wrapper">

        <div class="logo"><a href="/">{{config.site_name}}</a></div>
        <nav class="navigation">
            {{#if user}}
            <a href="/settings/">{{__ 'Settings'}}</a>
            <a href="/logout/">{{__ 'Logout'}}</a>
            {{else}}
            <a href="/login/">{{__ 'Login / Register'}}</a>
            {{/if}}
        </nav>

    </div>

</header>

{{{body}}}

<footer class="page-footer">

    <div class="inner-wrapper">

        <p>{{__ 'Powered by'}} <a href="https://github.com/trylinear/linear">linear</a></p>
        {{#if latest_version}}
        <p>{{{__ 'A new version (%s) of linear is available. <a href="https://github.com/trylinear/linear/releases">Review the changelog.</a>' latest_version }}}</p>
        {{/if}}

    </div>

</footer>

{{#if config.ga}}

<script>
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
ga('create', '{{config.ga}}', 'auto');
ga('send', 'pageview');
</script>

{{/if}}

</body>
</html>
